{
    "version": 2,
    "buildCommand": "npm install --prefix client && npm run build --prefix client",
    "outputDirectory": "client/.next",
    "framework": "nextjs",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "http://localhost:5000/api/$1"
        }
    ],
    "env": {
        "NEXT_PUBLIC_BACKEND_URL": "https://your-backend-url.onrender.com"
    }
}